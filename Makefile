TARGET := bin/test

clean:
	rm -f $(TARGET)

##########################################################################
# unit tests
##########################################################################

$(TARGET): test/test.cpp src/litest.hpp 
	$(CXX) -std=c++11 $(CXXFLAGS) $(FLAGS) $(CPPFLAGS) -I src -I test $< $(LDFLAGS) -o $@

##########################################################################
# documentation
##########################################################################

docs:
	doxygen Doxyfile
